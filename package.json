  "descrition": "Person is a plugin which allows users to add Person entity in order to show the location with a beutiful integration.",
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hass",
    "lovelace",
    "custom-cards"
  ],
  "main": "src/main.js",
  "module": "src/main.js",
  "repository": "git@github.com:gerardag/person-entity-card.git",
